<h1>Tickets</h1>

<%= paginate @tickets %>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Link</th>
      <th>Retailer</th>
      <th>Field</th>
      <th>Created at</th>
      <th>Created by</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tickets.each do |ticket| %>
      <tr>
        <td><%= ticket.name %></td>
        <td><%= ticket.description %></td>
        <td><%= ticket.link %></td>
        <td><%= ticket.fields.first.nil? ? "" : ticket.fields.first.retailer.title %></td>
        <td><%= ticket.fields.first.nil? ? "" : ticket.fields.first.title %></td>
        <td><%= ticket.created_at %></td>
        <td><%= ticket.user.nil? ? "" : ticket.user.email %></td>
        <td><%= link_to 'Show', ticket %></td>
        <% if ["QA","admin"].include?(current_user.role) %>
          <td><%= link_to 'Edit', edit_ticket_path(ticket) %></td>
          <td><%= link_to 'Destroy', ticket, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Ticket', new_ticket_path if ["QA","admin"].include?(current_user.role) %>
