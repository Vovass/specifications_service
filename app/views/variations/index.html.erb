<h1>Variations</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @variations.each do |variation| %>
      <tr>
        <td><%= variation.name %></td>
        <td><%= variation.description %></td>
        <td><%= link_to 'Показать', variation, class: "btn btn-secondary" %></td>
        <td><%= link_to 'Изменить', edit_variation_path(variation), class: "btn btn-secondary" %></td>
        <td><%= link_to 'Удалить', variation, method: :delete, data: { confirm: 'Вы уверены?' }, class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Variation', new_variation_path %>
