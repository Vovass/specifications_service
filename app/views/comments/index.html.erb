<p id="notice"><%= notice %></p>

<h1>Comments</h1>

<table>
  <thead>
    <tr>
      <th>Body</th>
      <th>Retailer</th>
      <th>Parent</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @comments.each do |comment| %>
      <tr>
        <td><%= comment.body %></td>
        <td><%= comment.retailer_id %></td>
        <td><%= comment.parent_id %></td>
        <td><%= link_to 'Показать', comment, class: "btn btn-secondary" %></td>
        <td><%= link_to 'Изменить', edit_comment_path(comment), class: "btn btn-secondary" %></td>
        <td><%= link_to 'Удалить', comment, method: :delete, data: { confirm: 'Вы уверены?' }, class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Comment', new_comment_path %>
