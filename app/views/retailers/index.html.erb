<h1>Retailers</h1>

<%= paginate @retailers unless params[:search] %>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @retailers.each do |retailer| %>
      <tr>
        <td><%= retailer.title %></td>
        <td><%= link_to 'Show', retailer, :"data-turbolinks" => "false" %></td>
        <td><%= link_to 'Edit', edit_retailer_path(retailer) if ["QA","admin"].include? current_user.role %></td>
        <td><%= link_to 'Destroy', retailer, method: :delete, data: { confirm: 'Are you sure?' } if current_user.role.eql? "admin" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Retailer', new_retailer_path if ["QA","admin"].include? current_user.role %>
