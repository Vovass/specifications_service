<%= link_to 'Retailers', @retailer %>

<h1>Field Histories</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Retailer</th>
      <th>Fields title</th>
      <th>Variation name</th>
      <th>Description</th>
      <th>Vocabulary name</th>
      <th>User</th>
      <th>Version</th>
      <th colspan="6"></th>
    </tr>
  </thead>

  <tbody>
    <% @retailer.field_histories.order(id: :desc).each do |field_history| %>
      <tr>
        <td><%= field_history.updated_at %></td>
        <td><%= field_history.retailer.title %></td>
        <td><%= field_history.fields_title %></td>
        <td><%= field_history.variation_name %></td>
        <td><%= field_history.description %></td>
        <td><%= field_history.vocabulary_name %></td>
        <td><%= field_history.user.email %></td>
        <td><%= field_history.version %></td>
        <td><%= field_history.field.nil? ? "" : (link_to 'Show', retailer_field_history_path(@retailer.id, field_history.id)) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
